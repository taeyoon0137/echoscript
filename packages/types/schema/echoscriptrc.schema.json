{
  "$ref": "#/definitions/echoscriptrc",
  "definitions": {
    "echoscriptrc": {
      "allOf": [
        {
          "type": "object",
          "properties": {
            "rootProject": {
              "type": "string",
              "minLength": 1,
              "default": "ECHO"
            },
            "project": {
              "type": "string",
              "minLength": 1
            },
            "start": {
              "type": "string",
              "minLength": 1,
              "default": "Starting script..."
            },
            "error": {
              "type": "string",
              "minLength": 1,
              "default": "Error occurred."
            },
            "end": {
              "type": "string",
              "minLength": 1,
              "default": "Script done"
            }
          }
        },
        {
          "type": "object",
          "properties": {
            "$schema": {
              "type": "string"
            }
          },
          "required": [
            "$schema"
          ]
        }
      ]
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}
